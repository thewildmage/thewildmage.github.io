{
  "imports": {
    "lume/": "https://deno.land/x/lume@v1.11.4/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --allow-read=./ --allow-write=./_distribution --allow-net=0.0.0.0:3000,cdn.deno.land --allow-sys -",
